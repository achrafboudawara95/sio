{% extends 'home.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h1>Projects</h1>

        <a href="{{ path('project_create') }}" class="btn btn-primary mb-3">Create Project</a>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
            </tr>
            </thead>
            <tbody>
            {% for project in projects %}
                <tr>
                    <td><a href="{{ path('project_show', {'id': project.id}) }}">{{ project.id }}</a></td>
                    <td>{{ project.name }}</td>
                    <td>{{ project.description }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}