{% extends 'home.html.twig' %}

{% block content %}
    <div class="container mt-4">
        <h1>Add Time Log</h1>

        {{ form_start(form) }}
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.startTime, 'Start Time') }}
                    {{ form_widget(form.startTime, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                    {{ form_errors(form.startTime) }}
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    {{ form_label(form.endTime, 'End Time') }}
                    {{ form_widget(form.endTime, { 'attr': {'class': 'form-control datetimepicker'} }) }}
                    {{ form_errors(form.endTime) }}
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="{{ path('project_show', { 'id': project.id }) }}" class="btn btn-secondary">Cancel</a>
        {{ form_end(form) }}
    </div>
{% endblock %}